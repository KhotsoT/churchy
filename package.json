{
  "name": "church-manager",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "server": "node server/index.js",
    "dev:full": "concurrently \"yarn dev\" \"yarn server\"",
    "android": "yarn build && npx cap sync android && npx cap open android",
    "android:dev": "yarn dev & npx cap run android",
    "ios": "yarn build && npx cap sync ios && npx cap open ios",
    "ios:dev": "yarn dev & npx cap run ios",
    "sync": "npx cap sync"
  },
  "dependencies": {
    "@capacitor/android": "^7.2.0",
    "@capacitor/core": "^7.2.0",
    "@capacitor/geolocation": "^7.1.5",
    "@capacitor/ios": "^7.2.0",
    "@capacitor/preferences": "^7.0.1",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@hookform/resolvers": "^3.3.2",
    "axios": "^1.6.2",
    "date-fns": "^3.0.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.49.2",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.5.3",
    "recharts": "^3.2.1",
    "yup": "^1.3.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.2.0",
